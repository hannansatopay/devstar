generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_OPT")
}

model Poll {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  question String
  pollType String
  options  String[]
  votes    String[]
  createdAt DateTime @default(now())
}